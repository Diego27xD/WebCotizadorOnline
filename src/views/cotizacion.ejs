  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <%- include('partials/header') %>

  <div class="container mt-4">
    <h4 class="mb-3">Nueva Cotizaci贸n</h4>

    <form id="formCotizacion" class="needs-validation" novalidate>
      <!-- Cliente -->

      <!-- Cotizaci贸n -->
      <div class="row">
        <div class="col-md-3 mb-3">
          <label for="IdCliente" class="form-label">Cliente</label>
          <select class="form-select" id="IdCliente" name="IdCliente" required>
            <option value="">Seleccione cliente</option>
            <% listaClientes.forEach(c => { %>
            <option value="<%= c.IdCliente %>">
              <%= c.razonSocial %> - <%= c.documento %>
            </option>
            <% }) %>
          </select>
          <div class="invalid-feedback">Seleccione un cliente</div>
          <button type="button" class="btn btn-link" onclick="abrirModal()">
            + Crear cliente
          </button>
        </div>
        <div class="col-md-3 mb-3">
          <label for="TipoMoneda" class="form-label">Moneda</label>
          <select
            class="form-select"
            id="TipoMoneda"
            name="TipoMoneda"
            required
          >
            <option value="">Seleccione</option>
            <option value="Soles">Soles</option>
            <option value="D贸lares">D贸lares</option>
          </select>
          <div class="invalid-feedback">Campo requerido</div>
        </div>
        <div class="col-md-3 mb-3">
          <label for="FormaPago" class="form-label">Forma de Pago</label>
          <select class="form-select" id="FormaPago" name="FormaPago" required>
            <option value="">Seleccione</option>
            <option value="Contado">Contado</option>
            <option value="Cr茅dito">Cr茅dito</option>
          </select>
          <div class="invalid-feedback">Campo requerido</div>
        </div>
        <div class="col-md-3 mb-3" id="validezContainer" style="display: none">
          <label for="validezOferta" class="form-label"
            >Validez de Oferta (d铆as)</label
          >
          <input
            type="number"
            class="form-control"
            id="validezOferta"
            name="validezOferta"
          />
          <div class="invalid-feedback">Campo requerido</div>
        </div>
      </div>

      <!-- Servicios -->
      <h5>Servicios</h5>
      <div id="serviciosContainer"></div>
      <button
        type="button"
        class="btn btn-outline-primary btn-sm mb-3"
        onclick="agregarServicio('Servicio')"
      >
        + Agregar Servicio
      </button>

      <!-- Repuestos -->
      <h5>Repuestos</h5>
      <div id="repuestosContainer"></div>
      <button
        type="button"
        class="btn btn-outline-secondary btn-sm mb-3"
        onclick="agregarServicio('Repuesto')"
      >
        + Agregar Repuesto
      </button>
      <br />
      <button type="submit" class="btn btn-success">Guardar Cotizaci贸n</button>
    </form>
    <br />
    <h4>Listado de Cotizaciones</h4>
    <div class="mb-3">
      <input
        type="text"
        class="form-control"
        id="filtroCotizaciones"
        placeholder="Buscar por raz贸n social o documento..."
        onkeyup="filtrarCotizaciones()"
      />
    </div>
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead class="bg-primary text-white">
          <tr class="bg-primary text-white">
            <th class="bg-primary text-white">Nro</th>
            <th style="display: none">ID</th>
            <th class="bg-primary text-white">Raz贸n social</th>
            <th class="bg-primary text-white">RUC / DNI</th>
            <th class="bg-primary text-white" style="text-align: center">
              Total
            </th>
            <th class="bg-primary text-white">Fecha de creaci贸n</th>
            <th class="bg-primary text-white">Documento</th>
            <th style="text-align: center" class="bg-primary text-white">
              Opciones
            </th>
          </tr>
        </thead>
        <tbody id="tablaCotizaciones">
          <% listaCotizacion.forEach((c, i) => { %>
          <tr>
            <td><%= listaCotizacion.length - i %></td>
            <td style="display: none"><%= c.IdCotizacion %></td>

            <td><%= c.cliente.razonSocial %></td>
            <td><%= c.cliente.documento %></td>
            <td style="text-align: end">S/. <%= c.montoTotal.toFixed(2) %></td>
            <td style="text-align: center">
              <%= c.fechaCreacion.toLocaleDateString() %>
            </td>
            <td style="text-align: center">
              <a
                href="/cotizacion/download/<%= c.IdCotizacion %>"
                class="btn btn-info text-white"
                data-filename="cotizacion_<%= c.IdCotizacion %>.pdf"
              >
                <i class="bi bi-file-earmark-pdf"></i>
              </a>
            </td>
            <td
              style="
                display: flex;
                gap: 8px;
                justify-content: center;
                align-items: center;
              "
            >
              <button
                class="btn btn-primary"
                onclick="verDetalle('<%= c.IdCotizacion %>')"
              >
                <i class="bi bi-eye"></i>
              </button>

              <button
                class="btn btn-danger"
                onclick="eliminarCotizacion('<%= c.IdCotizacion %>')"
              >
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <div id="loadingOverlay" style="display: none">
    <div class="spinner-border text-light" role="status"></div>
  </div>

  <!-- Modal para crear cliente -->
