    </div>
  </div>

  <div
    id="detalleModal"
    style="
      display: none;
      position: fixed;
      top: 10%;
      left: 50%;
      transform: translateX(-50%);
      background: #fff;
      padding: 20px;
      border: 1px solid #ccc;
      z-index: 1000;
    "
  >
    <h3>Detalle de Cotizaci贸n</h3>
    <p><strong>Cliente:</strong> <span id="modalCliente"></span></p>
    <p><strong>Forma de Pago:</strong> <span id="modalFormaPago"></span></p>
    <p><strong>Validez:</strong> <span id="modalValidez"></span> d铆as</p>
    <p><strong>Servicios:</strong></p>
    <ul id="modalServicios"></ul>
    <p><strong>Subtotal:</strong> S/. <span id="modalSubtotal"></span></p>
    <p><strong>IGV:</strong> S/. <span id="modalIGV"></span></p>
    <p><strong>Total:</strong> S/. <span id="modalTotal"></span></p>
    <button
      class="btn btn-danger"
      onclick="document.getElementById('detalleModal').style.display='none'"
    >
      Cerrar
    </button>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const formaPago = document.getElementById("FormaPago");
      const validezContainer = document.getElementById("validezContainer");
      const validezInput = document.getElementById("validezOferta");

      formaPago.addEventListener("change", function () {
        if (this.value === "Cr茅dito") {
          validezContainer.style.display = "block";
        } else {
          validezContainer.style.display = "none";
          validezInput.value = ""; // Limpia el valor si se oculta
        }
      });
    });
  </script>

  <script>
    async function verDetalle(id) {
      try {
        const res = await fetch(`/cotizacion/view/${id}`);
        const data = await res.json();

        if (!data.success) {
          alert("No se pudo cargar el detalle.");
          return;
        }

        const c = data.cotizacion;
        document.getElementById("modalCliente").textContent = c.cliente.nombre;
        document.getElementById("modalFormaPago").textContent = c.FormaPago;
        document.getElementById("modalValidez").textContent = c.validezOferta;
        document.getElementById("modalSubtotal").textContent = c.subtotal;
        document.getElementById("modalIGV").textContent = c.igv;
        document.getElementById("modalTotal").textContent = c.montoTotal;

        const serviciosList = document.getElementById("modalServicios");
        serviciosList.innerHTML = "";
        c.Servicios.forEach((s) => {
          const li = document.createElement("li");
          li.textContent = `${s.nombreServicio} - ${s.cantidad}  S/.${s.monto}`;
          serviciosList.appendChild(li);
        });

        document.getElementById("detalleModal").style.display = "block";
      } catch (err) {
        console.error("Error al cargar detalle:", err);
        alert("Error al consultar el servidor.");
      }
    }
  </script>

  <script>
    const modalCliente = new bootstrap.Modal(
      document.getElementById("modalCliente")
    );

    function abrirModalCliente() {
      document.getElementById("formClienteModal").reset();
      modalCliente.show();
    }

    let servicioIndex = 0; //  Contador global 煤nico

    function agregarServicio(tipo) {
      const container =
        tipo === "Servicio"
          ? document.getElementById("serviciosContainer")
          : document.getElementById("repuestosContainer");

      const index = servicioIndex++; //  Usamos un 铆ndice global 煤nico

      const html = `
            <div class="card mb-2 p-3">
              <input type="hidden" name="servicios[${index}][TipoServicio]" value="${tipo}">
              
              ${
                tipo === "Repuesto"
                  ? `
                <div class="mb-2">
                  <label>Nro. Parte</label>
                  <input type="text" class="form-control" name="servicios[${index}][NroParte]">
                </div>
              `
                  : ""
              }

              <div class="mb-2">
                <label>Nombre</label>
                <input type="text" class="form-control" name="servicios[${index}][nombreServicio]" required>
              </div>
              <div class="mb-2">
                <label>Cantidad</label>
                <input type="number" class="form-control" name="servicios[${index}][cantidad]" required>
              </div>
              <div class="mb-2">
                <label>Monto</label>
                <input type="number" class="form-control" name="servicios[${index}][monto]" required step="any">
              </div>
              
              <button type="button" class="btn btn-sm btn-danger" onclick="this.parentElement.remove()">Eliminar</button>
            </div>
          `;

      container.insertAdjacentHTML("beforeend", html);
    }
    document
      .getElementById("formCotizacion")
      .addEventListener("submit", async function (e) {
        e.preventDefault();
        const form = e.target;
        if (!form.checkValidity()) return form.classList.add("was-validated");

        const data = Object.fromEntries(new FormData(form));

        const servicios = Array.from(
          form.querySelectorAll('[name^="servicios"]')
        ).reduce((acc, input) => {
          const match = input.name.match(/servicios\[(\d+)\]\[(\w+)\]/);
          if (match) {
            const [_, index, key] = match;
            acc[index] = acc[index] || {};
            acc[index][key] = input.value;
          }
          return acc;
        }, []);

        console.log(servicios);

        await fetch("/cotizacion/crear", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            ...data,
            servicios: Object.values(servicios), // Se env铆an todos los servicios y repuestos
          }),
        });

        location.reload();
      });

    async function eliminarCotizacion(id) {
      if (!confirm("驴Estas seguro de eliminar cotizaci贸n?")) return;
      await fetch(`/cotizacion/eliminar/${id}`, { method: "DELETE" });
      location.reload();
    }
  </script>

  <script>
    function filtrarCotizaciones() {
      const input = document
        .getElementById("filtroCotizaciones")
        .value.toLowerCase();
      const filas = document.querySelectorAll("#tablaCotizaciones tr");

      filas.forEach((fila) => {
        const razonSocial = fila.children[1].textContent.toLowerCase();
        const documento = fila.children[2].textContent.toLowerCase();

        if (razonSocial.includes(input) || documento.includes(input)) {
          fila.style.display = "";
        } else {
          fila.style.display = "none";
        }
      });
    }
  </script>
  <script>
    document.querySelectorAll("a.btn-info").forEach((link) => {
      link.addEventListener("click", async (e) => {
        e.preventDefault();

        const overlay = document.getElementById("loadingOverlay");
        overlay.style.display = "flex";

        try {
          const response = await fetch(link.href);
          if (!response.ok) throw new Error("Error en la descarga");

          // Leer el nombre desde el header 'Content-Disposition'
          const disposition = response.headers.get("Content-Disposition");
          let filename = "archivo.pdf";
          if (disposition && disposition.includes("filename=")) {
            filename = disposition
              .split("filename=")[1]
              .replaceAll('"', "")
              .trim();
          }

          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);

          const a = document.createElement("a");
          a.href = url;
          a.download = filename;
          document.body.appendChild(a);
          a.click();
          a.remove();

          window.URL.revokeObjectURL(url);
        } catch (err) {
          alert("Error al descargar el archivo.");
          console.error(err);
        } finally {
          overlay.style.display = "none";
        }
      });
    });
  </script>
  <script>
    const modal = new bootstrap.Modal(document.getElementById("clienteModal"));

    function abrirModal(cliente = null) {
      const form = document.getElementById("formCliente");
      form.reset();
      form.classList.remove("was-validated");
      document.getElementById("docFeedback").textContent = "Documento inv谩lido";

      // Cargar datos si hay cliente
      document.getElementById("IdCliente").value = cliente?.IdCliente || "";
      document.getElementById("IdTipoDocumento").value =
        cliente?.IdTipoDocumento || "";
      document.getElementById("documento").value = cliente?.documento || "";
      document.getElementById("razonSocial").value = cliente?.razonSocial || "";
      document.getElementById("direccion").value = cliente?.direccion || "";
      document.getElementById("telefono").value = cliente?.telefono || "";
      document.getElementById("correoElectronico").value =
        cliente?.correoElectronico || "";
      document.getElementById("modalTitle").textContent = cliente
        ? "Editar Cliente"
        : "Nuevo Cliente";
      modal.show();
    }
    document
      .getElementById("formCliente")
      .addEventListener("submit", async function (e) {
        e.preventDefault();
        const form = e.target;
        form.classList.add("was-validated");

        const tipo = form.IdTipoDocumento.value;
        const doc = form.documento.value.trim();
        const razon = form.razonSocial.value.trim();
        const tel = form.telefono.value.trim();

        let valid = true;

        // Validaciones requeridas
        if (!tipo || !razon || !doc) valid = false;

        // Documento seg煤n tipo
        if (
          (tipo == 1 && doc.length !== 8) ||
          (tipo == 2 && doc.length !== 11)
        ) {
          form.documento.setCustomValidity("Documento inv谩lido");
          valid = false;
        } else {
          form.documento.setCustomValidity("");
        }

        // Tel茅fono: opcional pero si se ingresa debe tener 7 o 9 d铆gitos
        if (tel && ![7, 9].includes(tel.length)) {
          form.telefono.setCustomValidity("Tel茅fono inv谩lido");
          valid = false;
        } else {
          form.telefono.setCustomValidity("");
        }

        if (!valid) return;

        const data = Object.fromEntries(new FormData(form));
        const url = data.IdCliente ? "/cliente/actualizar" : "/cliente/crear";

        const res = await fetch(url, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(data),
        });

        const result = await res.json();

        if (!res.ok && result.error === "Documento duplicado") {
          form.documento.setCustomValidity("Documento ya registrado");
          document.getElementById("docFeedback").textContent =
            "Documento ya registrado";
          form.classList.add("was-validated");
          return;
        }

        location.reload();
      });
  </script>

  <%- include('partials/footer') %>
</body>
