            </select>
            <div class="invalid-feedback">Tipo de documento requerido</div>
          </div>

          <div class="mb-3">
            <label for="documento" class="form-label">Documento</label>
            <input
              type="text"
              class="form-control"
              name="documento"
              id="documento"
              required
            />
            <div class="invalid-feedback" id="docFeedback">
              Documento inv谩lido
            </div>
          </div>

          <div class="mb-3">
            <label for="razonSocial" class="form-label">Raz贸n Social</label>
            <input
              type="text"
              class="form-control"
              name="razonSocial"
              id="razonSocial"
              required
            />
            <div class="invalid-feedback">Raz贸n social requerida</div>
          </div>

          <div class="mb-3">
            <label for="direccion" class="form-label">Direcci贸n</label>
            <input
              type="text"
              class="form-control"
              name="direccion"
              id="direccion"
            />
          </div>

          <div class="mb-3">
            <label for="telefono" class="form-label">Tel茅fono</label>
            <input
              type="text"
              class="form-control"
              name="telefono"
              id="telefono"
            />
            <div class="invalid-feedback">
              Tel茅fono debe tener 7 o 9 d铆gitos
            </div>
          </div>

          <div class="mb-3">
            <label for="correoElectronico" class="form-label"
              >Correo Electr贸nico</label
            >
            <input
              type="email"
              class="form-control"
              name="correoElectronico"
              id="correoElectronico"
            />
          </div>
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Guardar</button>
          <button
            type="button"
